<Project Sdk="Microsoft.NET.Sdk">

		<PropertyGroup>
				<TargetFramework>net8.0</TargetFramework>
				<Version>8.0.0-beta.2</Version>
				<Nullable>enable</Nullable>
				<Authors>Alireza Oroumand</Authors>
				<ImplicitUsings>enable</ImplicitUsings>
				<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
				<RepositoryUrl>https://github.com/oroumand/Zamin</RepositoryUrl>
				<PackageIcon>icon.png</PackageIcon>
		</PropertyGroup>

		<ItemGroup>
				<None Include="..\..\..\..\icon.png" Pack="true" PackagePath=""/>
		</ItemGroup>

		<ItemGroup>
				<PackageReference Include="Microsoft.Extensions.DependencyModel" Version="8.0.0" />
				<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.0" />
				<PackageReference Include="Zamin.Extensions.Caching.Abstractions" Version="8.0.0-beta.1" />
				<PackageReference Include="IdentityModel" Version="6.2.0" />
				<PackageReference Include="IdentityModel.AspNetCore.OAuth2Introspection" Version="6.2.0" />
		</ItemGroup>

</Project>